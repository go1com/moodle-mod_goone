{{#loadmore}}
    {{#hits}}
    <tr>
        <td>
            <div class="col-md-1 checkbox-cell">
                <input name="hits_checkbox[]" type="checkbox" data-id="{{id}}" class="form-checkbox" data-name="{{title}}" />
            </div>
        </td>
        <td>
            <div class="overflow-hidden item-image-element" style="background-image:url({{{image}}});" ></div>
        </td>
        <td>
            <a id="lomodal" class="lomodal" data-id="{{id}}" data-name="{{title}}" style="cursor: pointer;font-weight: bold;font-size: 12pt;">
                {{title}}
            </a>
            <br>
            <span style="font-weight:bold;">
                {{type}}
            </span>
        </td>
        <td>
          {{#provider}}
            {{name}}
          {{/provider}}
        </td>
        <td>
            {{#delivery}}
                {{duration}} Min
            {{/delivery}}
        </td>
        <td>
            {{language}}
        </td>
        <td></td>
    </tr>
    {{/hits}}
{{/loadmore}}

{{^loadmore}}
<style>
#page-mod-goone-bulk .checkbox-cell,  #page-mod-goone-bulk .hit-cell{
    float:left;
}
#page-mod-goone-bulk .checkbox-cell {
 text-align:center;
 line-height: 180px;
}
#page-mod-goone-bulk .hit-cell{  
 background-color: #cdcdcd;
}
#page-mod-goone-bulk .checkbox-cell input
{
    height: 20px;
    width: 20px;
}
#page-mod-goone-bulk .dropdown .dropdown-menu .dropdown-item
{
    cursor: pointer;
}

#page-mod-goone-bulk .item-image-element {
    background-size:cover;
    height:150px;
    width:300px;
    box-shadow: 2px 2px 2px #ccc;
}
#total-hits {
    font-size: 12pt !important;
}
</style>
<br/>
<br/>
<div class="row">
    <div class="col-md-6">
        <h4 class="go1-result" >
            <span id=total-hits>{{ total }} {{# str }} results, mod_goone {{/ str }}</span>
        </h4>
    </div>
    <div class="col-md-6">
        <div class="dropdown" style="float:right;margin-bottom:15px;">
          <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            {{# str }} add, moodle {{/ str }}
          </button>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item" id="addexisting">
                <i class="icon fa fa-cog fa-fw "></i> 
                {{# str }} addexisting, mod_goone {{/ str }}
            </a>
            <a class="dropdown-item" id="createcourses">
                <i class="icon fa fa-plus fa-fw "></i>
                {{# str }} createcourses, mod_goone {{/ str }}
             </a>
          </div>
        </div>
    </div>
</div>

</div>

    <table class="table table-hover" id="hits-table-results">
        <tr>
            <th></th>
            <th></th>
            <th>{{# str }} title, mod_goone {{/ str }}</th>
            <th>{{# str }} provider, mod_goone {{/ str }}</th>
            <th>{{# str }} duration, mod_goone {{/ str }}</th>
            <th>{{# str }} language, mod_goone {{/ str }}</th>
            <td></td>
        </tr>

    {{#hits}}
    <tr>
        <td>
            <div class="col-md-1 checkbox-cell">
                <input name="hits_checkbox[]" type="checkbox" data-id="{{id}}" class="form-checkbox" data-name="{{title}}" />
            </div>
        </td>
        <td>
            <div class="overflow-hidden item-image-element" style="background-image:url({{{image}}});" ></div>
        </td>
        <td>
            <a id="lomodal" class="lomodal" data-id="{{id}}" data-name="{{title}}" style="cursor: pointer;font-weight: bold;font-size: 12pt;">
                {{title}}
            </a>
            <br>
            <span style="font-weight:bold;">
                {{type}}
            </span>
        </td>
        <td>
          {{#provider}}
            {{name}}
          {{/provider}}
        </td>
        <td>
            {{#delivery}}
                {{duration}} Min
            {{/delivery}}
        </td>
        <td>
            {{language}}
        </td>
        <td></td>
    </tr>
    {{/hits}}
</table>
{{/loadmore}}

